@{
    ViewBag.Title = "Rate few movies";
}

<h2>Rate few movies</h2>
<link rel="stylesheet" type="text/css" href="../../Content/custombindings.css">
<link href="~/Content/indexmain.css" rel="stylesheet" />
<script src="~/Scripts/underscore.min.js"></script>
<script src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/jquery.tmpl.js"></script>
<script src="~/Scripts/masonry.pkgd.min.js"></script>
<script src="~/Scripts/knockout-3.0.0.js"></script>
<script src="~/Scripts/App/starRating.js"></script>
<script src="~/Scripts/knockout-bootstrap.min.js"></script>
<script id="moviesTemplate" type="text/x-jquery-tmpl">
    <div class="pin">
        @*var movieTitle = ${Movie.Title};*@
        <button class="btn" data-bind="popover: {template: 'popoverTemplate', trigger: 'hover'}">
            <img src="${Poster.Imdb}" />
        </button>
        <p>${Movie.Title}</p>
        <div data-bind="starRating: points"></div>
    </div>
</script>

<script type="text/html" id="popoverTemplate">
    <button class="close pull-right" type="button" data-dismiss="popover">×</button>
    ${Movie.PlotSimple}
</script>

<script type="text/javascript">
    $(document).ready(function () {
        var imagesInput = {
            start: 5,
            end: 10
        };

        SurveyViewModel = {
            eachMovie: ko.observableArray([]),
            points: ko.observable(1)
        }

        $.ajax({
            type: "POST",
            url: '/api/Main/GetAllImagesJson',
            data: JSON.stringify(imagesInput),
            success: success,
            dataType: "json",
            contentType: "application/json; charset=utf-8"
        }).done(function (data) {
            var obj = $('#moviesTemplate');
            var arrayOfData = new Array();

            $('#moviesTemplate').tmpl(data).appendTo('#imagescontainer');
            

            $.each(data, function (index, value) {
                arrayOfData.push(value);
            });

            SurveyViewModel.eachMovie(arrayOfData);
            var container = document.querySelector('#imagescontainer');
            var msnry = new Masonry(container, {
                // options
                columnWidth: 200,
                itemSelector: '.item'
            });

            ko.applyBindings(SurveyViewModel, $('#imagescontainer')[0]);
        });

        var success = function (data) {
            alert("Yeah");
        };
    });
</script>

<body class="no-touch">
    <div class="wrap" id="mainId">
        @*<div data-bind="template: { name: 'movie-template', foreach: products }, starRating: points"></div>*@
    </div>

    <div id="imagescontainer" class="masonry">

    </div>

</body>